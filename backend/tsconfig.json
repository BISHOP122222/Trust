{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*",
        "prisma/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}